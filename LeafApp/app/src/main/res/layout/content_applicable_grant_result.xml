<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".views.ApplicableGrantResult"
    tools:showIn="@layout/activity_applicable_grant_result">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="     Applicable Grant     "
        android:id="@+id/button6"
        android:textColor="#ffffff"
        android:background="#97c777"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXX(from database)"
        android:id="@+id/grantAmount"
        android:textSize="22dp"
        android:layout_below="@+id/textView22"
        android:layout_alignStart="@+id/button6"
        android:layout_marginTop="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Based on the information provided, you are eligible for:"
        android:id="@+id/textView22"
        android:layout_marginTop="41dp"
        android:textSize="22dp"
        android:width="300dp"
        android:layout_below="@+id/button6"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
