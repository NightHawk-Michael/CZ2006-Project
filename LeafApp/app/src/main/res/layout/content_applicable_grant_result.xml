<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".views.ApplicableGrantResultView"
    tools:showIn="@layout/activity_applicable_grant_result">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="     Applicable Grant     "
        android:id="@+id/button6"
        android:textColor="#ffffff"
        android:background="#97c777"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Based on the information provided:"
        android:id="@+id/textView22"
        android:layout_marginTop="41dp"
        android:textSize="25dp"
        android:width="300dp"
        android:layout_below="@+id/button6"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ApplicantType"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/displayApplicantType"
        android:layout_below="@+id/textView22"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Income"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/displayIncome"
        android:layout_below="@+id/displayApplicantType"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Period"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/displayPeriod"
        android:layout_below="@+id/displayIncome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estimated Grant Amount:"
        android:id="@+id/textView6"
        android:textSize="25dp"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/displayPeriod"
        android:layout_alignStart="@+id/textView22" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grant Amount"
        android:id="@+id/displayGrantResult"
        android:textSize="28dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:textColor="#3cc94f" />


</RelativeLayout>
