<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textSize="25dp"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:width="250dp"
        android:background="#b5d8a0"
        android:onClick="showGreetings"
        android:text="Flat Availability"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="25dp"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button1"
        android:layout_below="@+id/button1"
        android:width="250dp"
        android:background="#97c777"
        android:onClick="showGreetings"
        android:text="Affordable Flat"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="35dp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button2"
        android:layout_below="@+id/button2"
        android:width="250dp"
        android:background="#7eba56"
        android:onClick="showGreetings"
        android:text="Applicable Grant"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="35dp"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button3"
        android:layout_below="@+id/textView"
        android:width="250dp"
        android:background="#6aa442"
        android:onClick="showGreetings"
        android:text="Debt Repayment"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="35dp"/>

</LinearLayout>
