<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.clarissapink.leafapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Affordable Flat"
        android:onClick="showGreetings"
        android:id="@+id/button"
        android:textColor="#ffffff"
        android:background="#7eba56"
        android:textSize="20dp"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:paddingLeft="38dp"
        android:paddingTop="10dp"
        android:paddingRight="38dp"
        android:paddingBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Applicable Grant"
        android:onClick="showGreetings"
        android:id="@+id/button2"
        android:textColor="#ffffff"
        android:background="#97c777"
        android:textSize="20dp"
        android:layout_marginTop="44dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/button4"
        android:layout_alignEnd="@+id/button4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Debt Repayment"
        android:onClick="showGreetings"
        android:id="@+id/button3"
        android:textColor="#ffffff"
        android:background="#6aa442"
        android:textSize="20dp"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/button"
        android:paddingLeft="40dp"
        android:paddingTop="10dp"
        android:paddingRight="40dp"
        android:paddingBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flat Availability"
        android:onClick="showGreetings"
        android:id="@+id/button4"
        android:textColor="#ffffff"
        android:background="#b5d8a0"
        android:textSize="20dp"
        android:paddingLeft="35dp"
        android:paddingTop="10dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btmSearch"
        android:src="@drawable/ssearch"
        android:background="#a6d662"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btmPrice"
        android:src="@drawable/sprice"
        android:background="#a6d662"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btmWrite"
        android:padding="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btmCal"
        android:src="@drawable/scal"
        android:background="#a6d662"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btmWrite"
        android:src="@drawable/swrite"
        android:background="#a6d662"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btmSearch"
        android:padding="10dp" />

</RelativeLayout>
