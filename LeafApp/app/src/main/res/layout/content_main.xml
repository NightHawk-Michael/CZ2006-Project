<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.clarissapink.leafapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      Affordable Flat      "
        android:id="@+id/button"
        android:textColor="#ffffff"
        android:background="#7eba56"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="     Applicable Grant     "
        android:onClick="showGreetings"
        android:id="@+id/button2"
        android:textColor="#ffffff"
        android:background="#97c777"
        android:textSize="20dp"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/button4"
        android:layout_alignStart="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      Debt Repayment        "
        android:onClick="showGreetings"
        android:id="@+id/button3"
        android:textColor="#ffffff"
        android:background="#6aa442"
        android:textSize="20dp"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      Flat Availiability     "
        android:onClick="showGreetings"
        android:id="@+id/button4"
        android:textColor="#ffffff"
        android:background="#b5d8a0"
        android:textSize="20dp"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/button2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btmWrite" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btmSearch"
        android:src="@drawable/ssearch"
        android:background="#a6d662"
        android:layout_marginBottom="42dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btmPrice"
        android:src="@drawable/sprice"
        android:background="#a6d662"
        android:layout_alignTop="@+id/btmCal"
        android:layout_toEndOf="@+id/textView" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btmCal"
        android:src="@drawable/scal"
        android:background="#a6d662"
        android:layout_alignTop="@+id/btmWrite"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btmWrite"
        android:src="@drawable/swrite"
        android:background="#a6d662"
        android:layout_alignTop="@+id/btmSearch"
        android:layout_toEndOf="@+id/btmSearch"
        android:layout_marginStart="34dp" />

</RelativeLayout>
