<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.clarissapink.leafapp.FlatAvailable"
    tools:showIn="@layout/activity_flat_available">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      Flat Availiability     "
        android:onClick="showGreetings"
        android:id="@+id/button9"
        android:textColor="#ffffff"
        android:background="#b5d8a0"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Type:"
        android:id="@+id/textView11"
        android:textSize="22dp"
        android:layout_below="@+id/button9"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Room Flat"
        android:id="@+id/checkBox9"
        android:checked="false"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 Room Flat"
        android:id="@+id/checkBox10"
        android:checked="false"
        android:layout_below="@+id/checkBox9"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 Room Flat"
        android:id="@+id/checkBox11"
        android:checked="false"
        android:layout_below="@+id/checkBox10"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4 Room Flat"
        android:id="@+id/checkBox12"
        android:checked="false"
        android:layout_below="@+id/checkBox11"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 Room Flat"
        android:id="@+id/checkBox13"
        android:checked="false"
        android:layout_below="@+id/checkBox12"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Executive"
        android:id="@+id/checkBox14"
        android:checked="false"
        android:layout_below="@+id/checkBox13"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 Gen"
        android:id="@+id/checkBox15"
        android:checked="false"
        android:layout_below="@+id/checkBox14"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:id="@+id/textView12"
        android:textSize="22dp"
        android:layout_below="@+id/checkBox15"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerFALocation"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price Range:"
        android:id="@+id/textView13"
        android:textSize="22dp"
        android:layout_below="@+id/spinnerFALocation"
        android:layout_alignParentStart="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S$50,000 - S$200,000"
            android:id="@+id/checkBox16"
            android:checked="false"
            android:layout_below="@+id/textView13"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S$200,001 - S$400,000"
            android:id="@+id/checkBox17"
            android:checked="false"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/checkBox16"
            android:layout_alignParentLeft="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S$400,001 - S$600,000"
            android:id="@+id/checkBox18"
            android:checked="false"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/checkBox17"
            android:layout_alignParentLeft="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">S$600,001"
            android:id="@+id/checkBox19"
            android:checked="false"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/checkBox18"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>
</ScrollView>
