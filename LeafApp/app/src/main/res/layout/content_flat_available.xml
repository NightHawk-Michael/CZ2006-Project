<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".views.FlatAvailableView"
    tools:showIn="@layout/activity_flat_available">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="434dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#b5d8a0"
                android:text="      Flat Availiability     "
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button13"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="30dp"
                android:text="Room Type:"
                android:textSize="22dp" />

            <Spinner
                android:id="@+id/spinnerFAroomType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@+id/textView11" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinnerFAroomType"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:text="Location"
                android:textSize="22dp" />

            <Spinner
                android:id="@+id/spinnerFALocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView12"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@+id/textView12" />

            <TextView
                android:id="@+id/textView13"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/spinnerFALocation"
                android:layout_marginLeft="30dp"
                android:text="Price Range:"
                android:textSize="22dp" />

            <Spinner
                android:id="@+id/spinnerFApriceRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView13"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@+id/textView13" />

            <Button
                android:id="@+id/searchButtonFA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkBox19"
                android:layout_centerHorizontal="true"
                android:background="#4238fa"
                android:onClick="searchButton"
                android:text="Search"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>


