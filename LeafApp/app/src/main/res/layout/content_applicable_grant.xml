<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.clarissapink.leafapp.ApplicableGrant"
    tools:showIn="@layout/activity_applicable_grant">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="       Applicable Grant      "
        android:id="@+id/button7"
        android:background="#b5d8a0"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room Type:"
            android:id="@+id/textView7"
            android:layout_marginTop="21dp"
            android:textSize="22dp"
            android:layout_below="@+id/button7"
            android:layout_alignStart="@+id/button7" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select All Types"
            android:id="@+id/checkBox"
            android:layout_below="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Room"
            android:id="@+id/checkBox2"
            android:layout_below="@+id/checkBox"
            android:layout_alignStart="@+id/checkBox"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Room"
            android:id="@+id/checkBox3"
            android:layout_below="@+id/checkBox2"
            android:layout_alignStart="@+id/checkBox2"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 Room"
            android:id="@+id/checkBox4"
            android:layout_below="@+id/checkBox3"
            android:layout_alignStart="@+id/checkBox3"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 Room"
            android:id="@+id/checkBox5"
            android:layout_below="@+id/checkBox4"
            android:layout_alignStart="@+id/checkBox4"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Room"
            android:id="@+id/checkBox6"
            android:layout_below="@+id/checkBox5"
            android:layout_alignStart="@+id/checkBox5"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Executive"
            android:id="@+id/checkBox7"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/checkBox6"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3rd Gen"
            android:id="@+id/checkBox8"
            android:layout_below="@+id/checkBox7"
            android:layout_alignStart="@+id/checkBox7"
            android:checked="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type Of Applicant:"
            android:id="@+id/textView8"
            android:textSize="22dp"
            android:layout_below="@+id/checkBox8"
            android:layout_alignStart="@+id/checkBox8" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner2"
            android:layout_below="@+id/textView8"
            android:layout_alignStart="@+id/textView8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average Montly Household Income:"
            android:id="@+id/textView9"
            android:textSize="22dp"
            android:layout_below="@+id/spinner2"
            android:layout_alignStart="@+id/spinner2" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner3"
            android:layout_below="@+id/textView9"
            android:layout_alignStart="@+id/textView9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sales Launch:"
            android:id="@+id/textView10"
            android:textSize="22dp"
            android:layout_below="@+id/spinner3"
            android:layout_alignStart="@+id/spinner3" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner4"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView10" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:id="@+id/button8"
            android:textSize="20dp"
            android:background="#4238fa"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView10"
            android:layout_alignEnd="@+id/checkBox7" />
    </RelativeLayout>
</ScrollView>
