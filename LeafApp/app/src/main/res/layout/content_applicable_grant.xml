<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".views.ApplicableGrantView"
    tools:showIn="@layout/activity_applicable_grant">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="434dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="       Applicable Grant      "
                android:id="@+id/button7"
                android:background="#b5d8a0"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room Type:"
                android:id="@+id/textView7"
                android:layout_marginTop="21dp"
                android:textSize="22dp"
                android:layout_below="@+id/button7"
                android:layout_marginLeft="30dp"
                android:layout_alignStart="@+id/button7" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select All Types"
                android:id="@+id/checkBox"
                android:layout_below="@+id/textView7"
                android:layout_alignStart="@+id/textView7"
                android:textSize="18dp"
                android:layout_marginLeft="30dp"
                android:checked="true" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Room"
                android:id="@+id/checkBox2"
                android:layout_below="@+id/checkBox"
                android:layout_alignStart="@+id/checkBox"
                android:textSize="18dp"
                android:layout_marginLeft="30dp"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Room"
                android:id="@+id/checkBox3"
                android:layout_below="@+id/checkBox2"
                android:layout_alignStart="@+id/checkBox2"
                android:textSize="18dp"
                android:layout_marginLeft="30dp"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 Room"
                android:id="@+id/checkBox4"
                android:layout_below="@+id/checkBox3"
                android:layout_alignStart="@+id/checkBox3"
                android:textSize="18dp"
                android:layout_marginLeft="30dp"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 Room"
                android:id="@+id/checkBox5"
                android:layout_below="@+id/checkBox4"
                android:layout_alignStart="@+id/checkBox4"
                android:textSize="18dp"
                android:layout_marginLeft="30dp"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Room"
                android:id="@+id/checkBox6"
                android:layout_below="@+id/checkBox5"
                android:layout_alignStart="@+id/checkBox5"
                android:textSize="18dp"
                android:layout_marginLeft="30dp"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Executive"
                android:id="@+id/checkBox7"
                android:checked="false"
                android:layout_below="@+id/checkBox6"
                android:textSize="18dp"
                android:layout_marginLeft="30dp"
                android:layout_alignStart="@+id/checkBox6" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3rd Gen"
                android:id="@+id/checkBox8"
                android:layout_below="@+id/checkBox7"
                android:layout_alignStart="@+id/checkBox7"
                android:textSize="18dp"
                android:layout_marginLeft="30dp"
                android:checked="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type Of Applicant:"
                android:id="@+id/textView8"
                android:textSize="22dp"
                android:layout_marginTop="41dp"
                android:layout_below="@+id/checkBox8"
                android:layout_marginLeft="30dp"
                android:layout_alignStart="@+id/checkBox8" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerAGTypeOfApplicant"
                android:layout_below="@+id/textView8"
                android:layout_marginLeft="30dp"
                android:textSize="18dp"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Average Montly Household Income:"
                android:id="@+id/textView9"
                android:textSize="22dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@+id/spinnerAGTypeOfApplicant"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerAGAverageMonthlyHouseholdIncome"
                android:layout_below="@+id/textView9"
                android:textSize="18dp"
                android:layout_marginLeft="30dp"
                android:layout_alignParentEnd="true"
                android:gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sales Launch:"
                android:id="@+id/textView10"
                android:textSize="22dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@+id/spinnerAGAverageMonthlyHouseholdIncome"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerAGSalesLaunch"
                android:layout_below="@+id/textView10"
                android:textSize="18dp"
                android:layout_marginLeft="30dp"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:onClick="searchButton"
                android:id="@+id/searchButton"
                android:textSize="20dp"
                android:background="#4238fa"
                android:textColor="#ffffff"
                android:layout_below="@+id/spinnerAGSalesLaunch"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="34dp"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>


